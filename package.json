{
    "name": "@hongkongkiwi/super-context",
    "version": "0.1.1",
    "description": "A powerful code indexing tool with multi-platform support",
    "private": true,
    "scripts": {
        "build": "turbo run build --filter='!./examples/*'",
        "build:core": "pnpm --filter @hongkongkiwi/super-context-core build",
        "build:vscode": "pnpm --filter @hongkongkiwi/super-context-vscode compile",
        "build:mcp": "pnpm --filter @hongkongkiwi/super-context-mcp build",
        "dev": "turbo run dev --parallel",
        "dev:core": "pnpm --filter @hongkongkiwi/super-context-core dev",
        "dev:vscode": "pnpm --filter @hongkongkiwi/super-context-vscode watch",
        "dev:mcp": "pnpm --filter @hongkongkiwi/super-context-mcp dev",
        "clean": "turbo run clean && rm -rf node_modules/.cache",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
        "typecheck": "turbo run typecheck",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest --coverage",
        "changeset": "changeset",
        "changeset:version": "changeset version",
        "changeset:publish": "pnpm build && changeset publish",
        "validate:packages": "pnpm -r run validate",
        "publish:npm": "pnpm build && pnpm validate:packages && changeset publish",
        "publish:jsr:core": "cd packages/core && pnpm dlx jsr publish",
        "publish:jsr:mcp": "cd packages/mcp && pnpm dlx jsr publish",
        "publish:jsr": "pnpm publish:jsr:core && pnpm publish:jsr:mcp",
        "publish:all": "pnpm publish:npm && pnpm publish:jsr",
        "release:core": "pnpm --filter @hongkongkiwi/super-context-core... run build && pnpm --filter @hongkongkiwi/super-context-core publish --access public --no-git-checks",
        "release:mcp": "pnpm --filter @hongkongkiwi/super-context-mcp... run build && pnpm --filter @hongkongkiwi/super-context-mcp publish --access public --no-git-checks",
        "release:vscode": "pnpm --filter @hongkongkiwi/super-context-core build && pnpm --filter @hongkongkiwi/super-context-vscode run webpack && pnpm --filter @hongkongkiwi/super-context-vscode release",
        "example:basic": "pnpm --filter @hongkongkiwi/super-context-basic-example start",
        "docs:build": "typedoc",
        "docs:dev": "typedoc --watch"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.18.2",
        "@changesets/changelog-github": "^0.5.1",
        "@changesets/cli": "^2.29.5",
        "@types/node": "^20.19.10",
        "@typescript-eslint/eslint-plugin": "^8.39.1",
        "@typescript-eslint/parser": "^8.39.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "assert": "^2.1.0",
        "browserify-zlib": "^0.2.0",
        "esbuild": "^0.24.2",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^9.1.2",
        "eslint-import-resolver-typescript": "^3.10.1",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-unused-imports": "^4.1.4",
        "https-browserify": "^1.0.0",
        "os-browserify": "^0.3.0",
        "prettier": "^3.6.2",
        "publint": "^0.3.12",
        "stream-http": "^3.2.0",
        "tree-sitter-cli": "^0.25.8",
        "tsup": "^8.5.0",
        "turbo": "^2.5.5",
        "typedoc": "^0.27.9",
        "typedoc-plugin-markdown": "^4.8.1",
        "typescript": "^5.9.2",
        "url": "^0.11.4",
        "vitest": "^3.2.4",
        "vm-browserify": "^1.1.2"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=10.0.0"
    },
    "packageManager": "pnpm@10.14.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/hongkongkiwi/super-context.git"
    },
    "license": "MIT",
    "author": "hongkongkiwi",
    "contributors": [
        "Cheney Zhang <277584121@qq.com> (Original author)"
    ],
    "forkedFrom": "https://github.com/zilliztech/claude-context"
}